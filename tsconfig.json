{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "removeComments": false,
    "preserveConstEnums": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "outDir": "dist",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "declaration": true
  },
  "include": [
    "src/**.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}