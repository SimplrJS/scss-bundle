{
  "name": "scss-bundle",
  "version": "2.1.0",
  "description": "Bundling SCSS files to one bundled file.",
  "types": "@types/index.d.ts",
  "main": "index.js",
  "scripts": {
    "test": "tsc -p . --noEmit && npm run tslint-test",
    "test-ci": "npm run test",
    "tslint-test": "tslint --config ./tslint.json --project . --exclude test/**/* && echo TsLint test successfully passed.",
    "build": "tsc -p . --newLine lf",
    "watch": "tsc -w",
    "test-scss": "node ./dist/bundle-cli.js -e ./examples/simple/main.scss -d ./examples/output/simple.scss",
    "test-scss-include-paths": "node ./dist/bundle-cli.js -e ./examples/include-paths/main.scss -d ./examples/output/include-paths.scss --includePaths ./examples ./node_modules",
    "prepublish": "npm run build"
  },
  "keywords": [
    "scss",
    "bundle",
    "sass",
    "node-sass"
  ],
  "files": [
    "dist",
    "**/*.md",
    "*.js",
    "@types",
    "!*.config.js"
  ],
  "author": "simplrjs <simplr@quatrodev.com> (https://github.com/simplrjs)",
  "bugs": "https://github.com/SimplrJS/scss-bundle/issues",
  "repository": "SimplrJS/scss-bundle",
  "homepage": "https://github.com/SimplrJS/scss-bundle",
  "license": "MIT",
  "devDependencies": {
    "@types/archy": "0.0.31",
    "@types/fs-extra": "^5.0.0",
    "@types/node": "^8.5.7",
    "@types/node-sass": "3.10.32",
    "@types/promise": "^7.1.30",
    "@types/yargs": "10.0.1",
    "simplr-tslint": "0.0.1",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  },
  "bin": {
    "scss-bundle": "./dist/bundle-cli.js"
  },
  "dependencies": {
    "archy": "^1.0.0",
    "fs-extra": "^5.0.0",
    "globs": "^0.1.3",
    "node-sass": "^4.7.2",
    "pretty-bytes": "^4.0.2",
    "promise": "^8.0.1",
    "yargs": "^10.0.3"
  }
}
